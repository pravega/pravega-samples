{
  "name": "anomaly-detection",
  "producer": {
    "latencyInMilliSec": 2000,
    "capacity": 100,
    "errorProbFactor": 0.3,
    "controlledEnv": true
  },
  "pipeline": {
    "parallelism": 1,
    "checkpointIntervalInMilliSec": 1000,
    "stateCheckpointDir": "hdfs://vijay-devbox:8020/checkpoint",
    "disableCheckpoint": false,
    "watermarkOffsetInSec": 0,
    "windowIntervalInSeconds": 30,
    "elasticSearch": {
      "sinkResults": true,
      "host": "127.0.0.1",
      "port": 9300,
      "cluster": "elasticsearch",
      "index": "anomaly-index",
      "type":"anomalies"
    }
  },
  "pravega": {
    "controllerUri": "tcp://127.0.0.1:9090",
    "stream": "NetworkPacket",
    "scope": "Network",
    "writer": {
      "routingKey": "NetworkEvent"
    }
  }
}